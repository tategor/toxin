extends ../layouts/ul-kit-layout

block header 
block content 
	include ../components/logo/logo.pug
	- let ulkitpages = [['#', 'Colors & Type'], ['#', 'Form Elements'], ['#', 'Cards'], ['#','Headers & Footers']]
	- let websitepages = [['#', 'Landing Pages'], ['#', 'Registration'], ['#', 'Sing in'], ['#', 'Search'], ['#', 'Room Detalis']]
	.ulkitlist 
		h1.ulkitlist__main-title Select Page
		.ulkitlist__listblock 
			.ulkitlist__listpages 
				h2.ulkitlist__list-header Ul-kit Pages 
				ul.ulkitlist__list 
					each item in ulkitpages 
						li.ulkitlist__listelement 
							a.ulkitlist__link(href=item[0] target="_blank") #{item[1]}
			.ulkitlist__listpages 
				h2.ulkitlist__list-header Website Pages 
				ul.ulkitlist__list 
					each item in websitepages 
						li.ulkitlist__listelement 
							a.ulkitlist__link(href=item[0] target="_blank") #{item[1]}
block footer